    "license": "MIT",
    "bugs": {
        "url": "https://github.com/my-nodejs-practice/anydoor/issues"
    },
    "homepage": "https://github.com/my-nodejs-practice/anydoor#readme",
    "devDependencies": {
        "babel-eslint": "^8.2.3",
        "eslint": "^4.19.1",
        "husky": "^0.14.3",
        "lint-staged": "^7.1.1",
        "prettier": "1.12.1"
    },
    "dependencies": {
        "chalk": "^2.4.1",
        "handlebars": "^4.0.11"
    }
}
